@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="rainbow-text">
        <p>TEST YOUR LUCK!</p>
    </div>

    <div class="beating-text">
        <p>Press the coin to win!</p>
    </div>

    <button id="coinBtn" class="coinBtn">
